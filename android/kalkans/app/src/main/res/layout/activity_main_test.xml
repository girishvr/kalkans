<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context="com.bitjini.kalkans.MainTest">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp">

            <ImageView
                android:id="@+id/Medical_Emergency_card"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Flood_Card"
                android:layout_marginStart="29dp"
                android:layout_marginTop="41dp"
                app:srcCompat="@drawable/med" />

            <ImageView
                android:id="@+id/Flood_Card"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/Medical_Emergency_card"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/flood" />

            <ImageView
                android:id="@+id/Accident_card"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/Flood_Card"
                android:layout_marginEnd="46dp"
                app:srcCompat="@drawable/accident" />

            <ImageView
                android:id="@+id/Earthquake_Card"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignStart="@+id/Accident_card"
                android:layout_alignTop="@+id/Medical_Emergency_card"
                app:srcCompat="@drawable/earthquake" />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
